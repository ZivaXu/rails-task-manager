<h1>Ziva's Conveve</h1>
<% @tasks.each do |task| %>
  <h3>
    <% if task.completed %>
      <%= '[V]' %>
    <% else %>
      <%= '[ ]' %>
    <% end %>
    <%= link_to task.title, task_path(task.id.to_i) %>
  </h3>
  <p><%= task.details %></p>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <br>

<% end %>

<div class="btn btn-warning">
  <%= link_to "Create New", new_path %>
</div>

